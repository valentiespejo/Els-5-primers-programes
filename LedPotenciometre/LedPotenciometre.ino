//******************************* VARIABLES ***************************************
int sensorValue = 0;
//******************************** SETUP ******************************************
void setup(){
pinMode(3, OUTPUT);
}

//********************************* LOOP ******************************************
void loop(){
sensorValue = analogRead(A0);
analogWrite(3, sensorValue/4);
}

